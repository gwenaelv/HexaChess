<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="32">
	<HBox alignment="center" spacing="16" styleClass="profile-container">
		<VBox styleClass="avatar-container">
			<ImageView fx:id="avatarIcon" fitWidth="100" fitHeight="100" preserveRatio="true" />
		</VBox>
		<VBox spacing="4" alignment="center_left">
			<HBox spacing="8" alignment="center_left">
				<Label fx:id="usernameLabel" styleClass="h2" />
				<Region fx:id="countryFlagIcon" styleClass="country-flags-large" />
			</HBox>
			<Label fx:id="ratingLabel" styleClass="profile-stat" />
			<Label fx:id="locationLabel" styleClass="profile-info" />
			<Label fx:id="joinedAtLabel" styleClass="profile-info" />
		</VBox>
	</HBox>
	<Button fx:id="backButton" text="Back" onAction="#openMain" />
</VBox>