<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="32">
	<HBox alignment="center" styleClass="profile-container">
		<HBox fx:id="profileItem" spacing="16" visible="false">
			<VBox styleClass="avatar-container">
				<ImageView fx:id="avatarIcon" fitHeight="100" fitWidth="100" preserveRatio="true" />
			</VBox>
			<VBox alignment="center_left" spacing="4">
				<HBox alignment="center_left" spacing="8">
					<Label fx:id="handleLabel" styleClass="h2" />
					<Region fx:id="countryFlagIcon" managed="false" visible="false" styleClass="country-flags, country-flags-large" />
				</HBox>
				<Label fx:id="ratingLabel" styleClass="profile-stat" />
				<Label fx:id="locationLabel" styleClass="profile-info" />
				<Label fx:id="joinedAtLabel" styleClass="profile-info" />
			</VBox>
		</HBox>
	</HBox>
	<Button fx:id="backButton" text="%common.back" onAction="#openMain" />
</VBox>