<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml" alignment="top_left">
	<!--
	<VBox StackPane.alignment="top_right" alignment="top_right">
		<Label fx:id="fontFamilyLabel" />
		<Label fx:id="fontNameLabel" />
	</VBox>
	-->
	<VBox StackPane.alignment="center" alignment="center" onMouseClicked="#onBoardClicked">
		<Canvas fx:id="canvas" width="666" height="666" />
		<HBox alignment="center" spacing="16">
			<Button fx:id="restartButton" text="Restart" onAction="#restart" />
			<Button fx:id="rewindButton" text="Rewind" onAction="#rewind" />
		</HBox>
	</VBox>
	<Button fx:id="menuButton" StackPane.alignment="top_left" text="≡" onAction="#toggleSidebar" styleClass="menu-button" />
	<Button fx:id="settingsHelpButton" StackPane.alignment="top_right" text="⋮" onAction="#openHelpSettings" styleClass="settings-help-button" />
	<HBox fx:id="playerItem" StackPane.alignment="bottom_left" spacing="12" styleClass="player-info-box">
		<VBox styleClass="avatar-container">
			<ImageView fx:id="avatarIcon" fitHeight="50" fitWidth="50" preserveRatio="true" />
		</VBox>
		<VBox alignment="center_left" spacing="4">
			<HBox alignment="center_left" spacing="8">
				<Label fx:id="handleLabel" />
				<Region fx:id="countryFlagIcon" styleClass="country-flags, country-flags-medium" />
			</HBox>
			<Label fx:id="ratingLabel" />
		</VBox>
	</HBox>
	<HBox fx:id="opponentItem" StackPane.alignment="bottom_right" spacing="12" styleClass="player-info-box">
		<VBox alignment="center_right" spacing="4">
			<HBox alignment="center_right" spacing="8">
				<Region fx:id="opponentCountryFlagIcon" styleClass="country-flags, country-flags-medium" />
				<Label fx:id="opponentHandleLabel" />
			</HBox>
			<Label fx:id="opponentRatingLabel" />
		</VBox>
		<VBox styleClass="avatar-container">
			<ImageView fx:id="opponentAvatarIcon" fitHeight="50" fitWidth="50" preserveRatio="true" />
		</VBox>
	</HBox>
	<VBox fx:id="sidebar" maxWidth="160" styleClass="sidebar">
		<Button text="Search" onAction="#openSearch" styleClass="sidebar-item" />
		<Button text="Profile" onAction="#openProfile" styleClass="sidebar-item" />
		<Button text="Achievements" onAction="#openSettings" styleClass="sidebar-item" />
		<Button text="Puzzles" onAction="#openSettings" styleClass="sidebar-item" />
		<Button text="Tournaments" onAction="#openTournaments" styleClass="sidebar-item" />
	</VBox>
</StackPane>