                <Button text="Inscription" onAction="#goToRegister" />
                <Button text="Connexion" onAction="#goToLogin" />
            </HBox>
            <HBox fx:id="userBox" visible = "false" managed="false" spacing="10" alignment="TOP_RIGHT" pickOnBounds="false" style="-fx-padding: 10;">
			    <Label fx:id="usernameLabel"/>
			    <Label fx:id="ratingLabel"/>
		    </HBox>
            <Button fx:id="settingsHelpButton" text="â‹®" onAction="#openSettings" styleClass="settings-help-button"/>
        </HBox>
    </StackPane>
    
    <HBox alignment="center" spacing="16">
        <Button text="Restart" onAction="#restart" />
        <Button text="Rewind" onAction="#rewind" />
    </HBox>
</VBox>