<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="top_center" spacing="20" styleClass="main-container">
	<padding>
		<Insets top="20" right="20" bottom="20" left="20" />
	</padding>
	<Label fx:id="titleLabel" text="%tournament.participants.title" styleClass="h2" />
	<ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
		<content>
			<VBox fx:id="listContainer" spacing="10" alignment="top_center" />
		</content>
	</ScrollPane>
	<Button fx:id="backButton" text="%common.back" onAction="#handleBack" prefWidth="100" />
</VBox>