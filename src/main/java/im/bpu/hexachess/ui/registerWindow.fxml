<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20">
	<Label text="Sign Up" styleClass="h2" />
	<VBox alignment="center" maxWidth="300" spacing="10">
		<Label text="Username" />
		<TextField fx:id="handleField" />
		<Label text="Email" />
		<TextField fx:id="emailField" />
		<Label text="Password" />
		<PasswordField fx:id="passwordField" />
	</VBox>
	<Label fx:id="statusLabel" visible="false" />
	<Button fx:id="signUpButton" text="Sign Up" onAction="#handleRegister" />
	<Button fx:id="backButton" text="Back" onAction="#openStart" />
</VBox>