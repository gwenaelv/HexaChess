<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20">
	<Label text="%login.title" styleClass="h2" />
	<VBox alignment="center" maxWidth="300" spacing="10">
		<Label text="%common.username" />
		<TextField fx:id="handleField" onAction="#handleLogin" />
		<Label text="%common.password" />
		<PasswordField fx:id="passwordField" onAction="#handleLogin" />
	</VBox>
	<Label fx:id="errorLabel" managed="false" visible="false" styleClass="text-danger" />
	<Button fx:id="loginButton" text="%login.button" onAction="#handleLogin" />
	<Button fx:id="backButton" text="%common.back" onAction="#openStart" />
</VBox>