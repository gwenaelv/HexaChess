<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns:fx="http://javafx.com/fxml" alignment="center">
    
    <VBox alignment="center" spacing="20">
        <VBox alignment="center" spacing="5">
            <Label text="Daily Puzzle" styleClass="h2" />
            <Label fx:id="statusLabel" text="Loading..." style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        </VBox>

        <StackPane>
            <Canvas fx:id="canvas" width="600" height="600" />
            
            <VBox fx:id="successContainer" alignment="center" visible="false" managed="false" 
                  style="-fx-background-color: rgba(0,0,0,0.8);">
                <Label text="ðŸ†" style="-fx-font-size: 48px;" />
                <Label text="PUZZLE SOLVED!" style="-fx-font-size: 24px; -fx-text-fill: #2eda8e; -fx-font-weight: bold;" />
            </VBox>
        </StackPane>

        <HBox alignment="center" spacing="20">
            <Button fx:id="backButton" text="BACK" onAction="#openMain" styleClass="button" />
            <Button fx:id="resetButton" text="RESET" onAction="#resetPuzzle" styleClass="button" />
        </HBox>
    </VBox>

</StackPane>