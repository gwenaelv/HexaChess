<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane styleClass="main-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
	<!-- En-tête -->
	<top>
		<HBox alignment="CENTER" prefHeight="80.0" BorderPane.alignment="CENTER">
			<children>
				<Label styleClass="title-text" text="Assistant de Jeu" />
			</children>
		</HBox>
	</top>
	<!-- Contenu Central -->
	<center>
		<VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</padding>
			<children>
				<!-- Description -->
				<Label styleClass="subtitle-text" text="Besoin d'aide ? L'IA peut calculer le meilleur coup pour vous." textAlignment="CENTER" wrapText="true" />
				<!-- Zone de contrôle -->
				<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 15; -fx-padding: 20;">
					<Button fx:id="showBestMoveButton" mnemonicParsing="false" onAction="#showBestMove" styleClass="action-button" text="Calculer le meilleur coup" />
					<Label fx:id="bestMoveLabel" style="-fx-font-style: italic;" styleClass="normal-text" text="En attente..." />
				</VBox>
				<!-- Zone de dessin pour visualiser le coup (Canvas) -->
				<VBox alignment="CENTER" style="-fx-border-color: #666; -fx-border-width: 2; -fx-border-radius: 5; -fx-border-style: dashed;">
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
					<children>
						<Label text="Visualisation" style="-fx-font-size: 10px; -fx-text-fill: #aaa;" />
						<Canvas fx:id="moveCanvas" height="150.0" width="300.0" />
					</children>
				</VBox>
			</children>
		</VBox>
	</center>
	<!-- Pied de page avec bouton retour -->
	<bottom>
		<HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" BorderPane.alignment="CENTER">
			<padding>
				<Insets left="20.0" />
			</padding>
			<children>
				<Button fx:id="backButton" cancelButton="true" mnemonicParsing="false" onAction="#openMain" styleClass="back-button" text="Retour" />
			</children>
		</HBox>
	</bottom>
</BorderPane>