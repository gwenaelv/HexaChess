<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="20" styleClass="main-container">
	<padding>
		<Insets top="30" right="30" bottom="30" left="30" />
	</padding>
	<Label text="%profile.edit.title" styleClass="h2" />
	<VBox spacing="10" maxWidth="400" alignment="center">
		<Label text="%profile.edit.email" />
		<TextField fx:id="emailField" />
		<Label text="%profile.edit.location" />
		<TextField fx:id="locationField" />
		<Label text="%profile.edit.avatar" />
		<TextField fx:id="avatarField" promptText="https://example.com/image.png" />
		<Label text="%profile.edit.newpassword" />
		<PasswordField fx:id="newPasswordField" />
		<Label text="%profile.edit.password" style="-fx-font-weight: bold;" />
		<PasswordField fx:id="currentPasswordField" />
	</VBox>
	<Label fx:id="statusLabel" managed="false" visible="false" styleClass="text-danger" />
	<Button text="%profile.edit.save" onAction="#handleSave" styleClass="success-button" prefWidth="200" prefHeight="40" />
	<Button fx:id="backButton" text="%profile.edit.cancel" onAction="#handleCancel" prefWidth="200" />
</VBox>